<% layout('layouts/boilerplate') %> 

<form action="/groups/<%= group._id %>?_method=PUT" method="post">
    <div class="mb-3">
        <label for="number" class="form-label">Number</label>
        <input type="number" min="0" class="form-control" id="number" name="num" value="<%= group.num %>" />
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
<a class="btn btn-primary" href="/groups/<%= group._id %> " role="button">Back To Groups</a>
