<% layout('layouts/boilerplate') %>

<div class="container vh-100 d-flex justify-content-center align-items-center">
    <div class="container border border-secondary border-2 py-5">
        <div class="row">
            <div class="col-6 offset-3">
                <form action="/login" method="POST" class="needs-validation" novalidate>
                    <div class="h1 text-center mb-5 border-bottom border-2">صفحة تسجيل الدخول</div>
                    <div class="mb-3">
                        <label for="username" class="form-label">الإسم</label>
                        <input type="text" class="form-control" id="username" name="username" required />
                        <div class="valid-feedback">جيد</div>
                        <div class="invalid-feedback">يرجى وضع اسم</div>
                    </div>
                    <div class="mb-3">
                        <label for="password" class="form-label">كلمة السر</label>
                        <input type="password" class="form-control" id="password" name="password" required />
                        <div class="valid-feedback">جيد</div>
                        <div class="invalid-feedback">يرجى وضع كلمة السر</div>
                    </div>
                    <button type="submit" class="btn btn-lg btn-success d-inline">تسجيل</button>
                    <a class="btn btn-lg btn-primary" href="/register" role="button">إنشاء حساب</a>
                </form>
            </div>
        </div>
    </div>
</div>
