<% layout('layouts/boilerplate') %>

<div class="container vh-100 d-flex justify-content-center align-items-center">
    <div class="container border border-secondary border-2 py-5">
        <div class="row">
            <div class="col-6 offset-3">
                <form action="/register" method="POST" class="needs-validation" novalidate>
                    <div class="mb-3">
                        <label for="username" class="form-label">الإسم</label>
                        <input type="text" class="form-control" id="username" name="user[username]" minlength="3" maxlength="50" required/>
                        <div class="valid-feedback">جيد</div>
                        <div class="invalid-feedback">يرجى وضع اسم يحتوى على 3 حروف على الأقل</div>
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">البريد الإلكتروني</label>
                        <input type="email" class="form-control" id="email" name="user[email]" required />
                        <div class="valid-feedback">جيد</div>
                        <div class="invalid-feedback">يرجى وضع البريد الإلكتروني</div>
                    </div>
                    <div class="mb-3">
                        <label for="password" class="form-label">كلمة السر</label>
                        <input type="password" class="form-control" id="password" name="user[password]" required />
                        <div class="valid-feedback">جيد</div>
                        <div class="invalid-feedback">يرجى وضع كلمة السر</div>
                    </div>
                    <button type="submit" class="btn btn-success d-block">تسجيل</button>
                </form>
            </div>
        </div>
    </div>
</div>
